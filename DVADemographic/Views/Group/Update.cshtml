@model Group

<div class="col-md-12 p-3 d-flex justify-content-center">
    <div class="col-md-6 " style="z-index:1;">
        <div class="card hoverable effect2">
            <div class="card-body">
                <form asp-controller="Group" asp-action="Update" method="post" role="form">
                    <h3>Edit Group @Model.Name</h3>
                    @Html.HiddenFor(m => Model.GroupId)
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input class="btn btn-default btn-sm" type="submit" value="Return" asp-controller="Home" asp-action="Index" />
                        <input class="btn btnBlue btn-sm" type="submit" value="Update" />
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    
</div>