@model CreateGroupViewModel

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Group" asp-action="Create" method="post" class="form-horizontal" role="form">
                    @*@Html.HiddenFor(m => m.Group.GroupId)*@
                    <h3>Create new Group</h3>
                    <div class="form-group">
                        <label asp-for="Group.Name" class="control-label"></label>

                        <input asp-for="Group.Name" class="form-control" placeholder="Enter Groups name" />
                        <span asp-validation-for="Group.Name" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Return" asp-controller="Home" asp-action="Index" />
                        <input class="btn btn-success" type="submit" value="Create" />
                    </div>

                </form>
            </div>
        </div>
    </div>
    
    
</div>